    <script>
        // Utility function to show a custom message modal
        function showMessage(title, message) {
            document.getElementById('messageModalTitle').textContent = title;
            document.getElementById('messageModalContent').textContent = message;
            openModal('messageModal');
        }

        // Sticky Header
        window.addEventListener('scroll', function() {
            const header = document.getElementById('header');
            if (window.scrollY > 100) {
                header.classList.add('sticky-header');
            } else {
                header.classList.remove('sticky-header');
            }
        });

        // Mobile Menu Toggle
        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            const icon = document.getElementById('mobile-menu-icon');
            if (menu.classList.contains('mobile-menu')) {
                menu.classList.remove('mobile-menu');
                menu.classList.add('flex-col');
                icon.classList.remove('fa-bars');
                icon.classList.add('fa-times');
            } else {
                menu.classList.remove('flex-col');
                menu.classList.add('mobile-menu');
                icon.classList.remove('fa-times');
                icon.classList.add('fa-bars');
            }
        }
        function closeMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            const icon = document.getElementById('mobile-menu-icon');
            menu.classList.remove('flex-col');
            menu.classList.add('mobile-menu');
            icon.classList.remove('fa-times');
            icon.classList.add('fa-bars');
        }
        document.getElementById('mobile-menu-btn').addEventListener('click', toggleMobileMenu);

        // Smooth Scroll
        function scrollToSection(sectionId) {
            document.getElementById(sectionId).scrollIntoView({
                behavior: 'smooth'
            });
            closeMobileMenu();
        }

        // Package Filter
        function filterPackages(provider, event) {
            const cards = document.querySelectorAll('.package-card');
            const filterBtns = document.querySelectorAll('.filter-btn');
            
            // Update button states
            filterBtns.forEach(btn => {
                btn.classList.remove('active', 'bg-blue-600', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-700');
            });
            
            if (event && event.target) {
              event.target.classList.remove('bg-gray-200', 'text-gray-700');
              event.target.classList.add('active', 'bg-blue-600', 'text-white');
            }
            
            // Filter cards
            cards.forEach(card => {
                card.style.display = (provider === 'all' || card.dataset.provider === provider) ? 'block' : 'none';
                if (card.style.display === 'block') {
                    card.classList.add('fade-in');
                }
            });
        }

        // Package Selection
        function selectPackage(name, price, speed) {
            document.getElementById('selectedPackage').value = `${name} - ${price}/tháng - ${speed}`;
            openModal('orderModal');
        }

        // Price Calculator
        document.getElementById('packageSelect').addEventListener('change', calculatePrice);
        document.getElementById('monthsInput').addEventListener('input', calculatePrice);

        function calculatePrice() {
            const packageSelect = document.getElementById('packageSelect');
            const monthsInput = document.getElementById('monthsInput');
            const monthlyCost = document.getElementById('monthlyCost');
            const totalCost = document.getElementById('totalCost');
            const savings = document.getElementById('savings');
            
            const monthlyPrice = parseInt(packageSelect.value) || 0;
            const months = parseInt(monthsInput.value) || 1;
            
            if (monthlyPrice > 0) {
                const total = monthlyPrice * months;
                const discount = months >= 12 ? monthlyPrice * 2 : 0; // 2 months discount for 12+ months
                const finalTotal = total - discount;
                
                monthlyCost.textContent = monthlyPrice.toLocaleString() + ' VNĐ';
                totalCost.textContent = finalTotal.toLocaleString() + ' VNĐ';
                savings.textContent = discount.toLocaleString() + ' VNĐ';
            } else {
                monthlyCost.textContent = '0 VNĐ';
                totalCost.textContent = '0 VNĐ';
                savings.textContent = '0 VNĐ';
            }
        }

        // Coverage Checker
        function checkCoverage() {
            const address = document.getElementById('addressInput').value;
            const resultDiv = document.getElementById('coverageResult');
            const availabilityDiv = document.getElementById('providerAvailability');
            
            if (!address.trim()) {
                showMessage('Lỗi', 'Vui lòng nhập địa chỉ để kiểm tra vùng phủ sóng.');
                return;
            }
            
            // Simulate coverage check
            const providers = [
                { name: 'FPT', available: Math.random() > 0.3, speed: '500 Mbps', color: '#FF6600' },
                { name: 'Viettel', available: Math.random() > 0.2, speed: '300 Mbps', color: '#00AA00' },
                { name: 'VNPT', available: Math.random() > 0.4, speed: '250 Mbps', color: '#0066CC' }
            ];
            
            availabilityDiv.innerHTML = providers.map(provider => `
                <div class="flex justify-between items-center p-4 rounded-lg border ${provider.available ? 'bg-green-50 border-green-200' : 'bg-red-50 border-red-200'}">
                    <div class="flex items-center">
                        <div class="w-4 h-4 rounded-full mr-3" style="background-color: ${provider.color}"></div>
                        <span class="font-semibold">${provider.name}</span>
                    </div>
                    <div class="text-right">
                        ${provider.available
                            ? `<span class="text-green-600 font-semibold">Có thể lắp đặt</span><br><span class="text-sm text-gray-500">Tối đa ${provider.speed}</span>`
                            : `<span class="text-red-600 font-semibold">Chưa phủ sóng</span>`
                        }
                    </div>
                </div>
            `).join('');
            
            resultDiv.classList.remove('hidden');
        }

        // FAQ Toggle
        function toggleFaq(element) {
            const answer = element.querySelector('.faq-answer');
            const icon = element.querySelector('i');
            
            if (answer.classList.contains('hidden')) {
                answer.classList.remove('hidden');
                icon.classList.add('rotate-180');
            } else {
                answer.classList.add('hidden');
                icon.classList.remove('rotate-180');
            }
        }

        // FAQ Search
        document.getElementById('faqSearch').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const faqItems = document.querySelectorAll('.faq-item');
            
            faqItems.forEach(item => {
                const question = item.querySelector('h3').textContent.toLowerCase();
                const answer = item.querySelector('.faq-answer').textContent.toLowerCase();
                
                if (question.includes(searchTerm) || answer.includes(searchTerm)) {
                    item.style.display = 'block';
                } else {
                    item.style.display = 'none';
                }
            });
        });

        // Modal Functions
        function openModal(modalId) {
            document.getElementById(modalId).style.display = 'block';
            document.body.style.overflow = 'hidden';
        }

        function closeModal(modalId) {
            document.getElementById(modalId).style.display = 'none';
            document.body.style.overflow = 'auto';
        }

        // Chat Functions
        function toggleChat() {
            openModal('chatModal');
        }

        async function sendMessage() {
            const input = document.getElementById('chatInput');
            const messages = document.getElementById('chatMessages');
            const chatSpinner = document.getElementById('chatSpinner');
            const sendIcon = document.getElementById('sendIcon');
            const message = input.value.trim();
            
            if (!message) return;
            
            // Add user message
            messages.innerHTML += `
                <div class="mb-4 text-right">
                    <div class="bg-blue-600 text-white p-3 rounded-lg inline-block max-w-xs">
                        <p class="text-sm">${message}</p>
                    </div>
                </div>
            `;
            
            input.value = '';
            messages.scrollTop = messages.scrollHeight;
            
            // Show loading spinner
            chatSpinner.style.display = 'inline-block';
            sendIcon.style.display = 'none';
            
            // Simulate AI response
            const simulatedApiCall = new Promise(resolve => {
                setTimeout(() => {
                    const lowerCaseMessage = message.toLowerCase();
                    let responseText = 'Cảm ơn bạn đã liên hệ! Bạn có thể đặt câu hỏi cụ thể hơn được không?';

                    if (lowerCaseMessage.includes('giá') || lowerCaseMessage.includes('chi phí') || lowerCaseMessage.includes('bao nhiêu tiền')) {
                        responseText = 'Giá cước mỗi tháng tùy thuộc vào gói bạn chọn. Bạn có thể xem bảng giá chi tiết ở phần "So Sánh Gói Cước" phía trên nhé!';
                    } else if (lowerCaseMessage.includes('tốc độ')) {
                        responseText = 'Tốc độ mạng của các gói cước được liệt kê rõ ràng trong phần "So Sánh Gói Cước". Các gói phổ biến có tốc độ từ 100Mbps đến 500Mbps.';
                    } else if (lowerCaseMessage.includes('lắp đặt') || lowerCaseMessage.includes('quy trình')) {
                        responseText = 'Quy trình lắp đặt rất đơn giản. Sau khi đăng ký, nhân viên kỹ thuật sẽ liên hệ và lắp đặt cho bạn trong vòng 24-48 giờ.';
                    } else if (lowerCaseMessage.includes('khuyến mãi') || lowerCaseMessage.includes('ưu đãi')) {
                        responseText = 'Hiện tại đang có chương trình khuyến mãi miễn phí lắp đặt khi đăng ký gói cước từ 12 tháng trở lên. Bạn còn được tặng thêm 1-2 tháng cước phí nữa đấy!';
                    } else if (lowerCaseMessage.includes('tư vấn')) {
                        responseText = 'Bạn có thể điền form "Tư vấn miễn phí" trên trang web hoặc gọi trực tiếp hotline 1900-123456 để được hỗ trợ nhanh nhất nhé.';
                    } else if (lowerCaseMessage.includes('chào') || lowerCaseMessage.includes('hello')) {
                        responseText = 'Xin chào! Tôi có thể giúp gì cho bạn?';
                    }

                    resolve(responseText);
                }, 1500); // Simulate API delay
            });

            try {
                const botResponse = await simulatedApiCall;
                messages.innerHTML += `
                    <div class="mb-4">
                        <div class="bg-blue-100 p-3 rounded-lg inline-block max-w-xs">
                            <p class="text-sm">${botResponse}</p>
                        </div>
                    </div>
                `;
            } catch (error) {
                messages.innerHTML += `
                    <div class="mb-4">
                        <div class="bg-red-100 p-3 rounded-lg inline-block max-w-xs">
                            <p class="text-sm">Đã xảy ra lỗi. Vui lòng thử lại sau.</p>
                        </div>
                    </div>
                `;
            } finally {
                chatSpinner.style.display = 'none';
                sendIcon.style.display = 'inline-block';
                messages.scrollTop = messages.scrollHeight;
            }
        }

        // Form Submissions
        document.getElementById('registerForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const spinner = document.getElementById('registerSpinner');
            const button = this.querySelector('button[type="submit"]');
            
            spinner.style.display = 'inline-block';
            button.disabled = true;
            
            setTimeout(() => {
                showMessage('Đăng ký thành công', 'Cảm ơn bạn đã đăng ký! Chúng tôi sẽ liên hệ với bạn trong vòng 30 phút.');
                closeModal('registerModal');
                spinner.style.display = 'none';
                button.disabled = false;
                this.reset();
            }, 2000);
        });

        document.getElementById('consultForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const spinner = document.getElementById('consultSpinner');
            const button = this.querySelector('button[type="submit"]');
            
            spinner.style.display = 'inline-block';
            button.disabled = true;
            
            setTimeout(() => {
                showMessage('Yêu cầu đã được gửi', 'Yêu cầu tư vấn của bạn đã được gửi thành công. Chúng tôi sẽ gọi lại cho bạn trong vài phút.');
                closeModal('consultModal');
                spinner.style.display = 'none';
                button.disabled = false;
                this.reset();
            }, 1000);
        });

        document.getElementById('orderForm').addEventListener('submit', function(e) {
            e.preventDefault();
            const spinner = document.getElementById('orderSpinner');
            const button = this.querySelector('button[type="submit"]');
            
            spinner.style.display = 'inline-block';
            button.disabled = true;
            
            setTimeout(() => {
                showMessage('Đặt lịch thành công', 'Bạn đã đặt lịch lắp đặt thành công. Chúng tôi sẽ liên hệ xác nhận trong vòng 1 giờ.');
                closeModal('orderModal');
                spinner.style.display = 'none';
                button.disabled = false;
                this.reset();
            }, 1000);
        });

        // Close modals when clicking outside
        window.addEventListener('click', function(e) {
            const modals = document.querySelectorAll('.modal');
            modals.forEach(modal => {
                if (e.target === modal) {
                    closeModal(modal.id);
                }
            });
        });

        // Set minimum date for installation
        const today = new Date();
        const tomorrow = new Date(today);
        tomorrow.setDate(tomorrow.getDate() + 1);
        const dateInput = document.querySelector('input[type="date"]');
        if (dateInput) {
            dateInput.min = tomorrow.toISOString().split('T')[0];
        }

        // Initialize page
        document.addEventListener('DOMContentLoaded', function() {
            calculatePrice();
            
            // Add some initial animation delays
            const cards = document.querySelectorAll('.package-card');
            cards.forEach((card, index) => {
                card.style.animationDelay = `${index * 0.1}s`;
            });
        });
    </script>
</body>
</html>
